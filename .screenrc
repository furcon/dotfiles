ethack on
deflogin on
#autodetach off
startup_message off
vbell off
msgwait 1


hardstatus off
hardstatus alwayslastline
hardstatus string "%h%? users: %u%?"

termcapinfo vt100 dl=5\E[M 
termcapinfo xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
termcapinfo xterm*|linux*|rxvt*|Eterm* OP
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
termcapinfo xterm* ti@:te@
attrcolor b ".I" 
defbce "on"

defscrollback 10000
defnonblock 5

#keybindings
bind ^k
bind ^\
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history
register n "^a^c^aA"
bindkey -k k2 process n
bindkey -k k3 prev
bindkey -k k4 next
bindkey -k k5 kill
bindkey -k k6 detach
bindkey -k k7 copy
bindkey -k k8 help
bindkey -k k9 screen -t help
bindkey -k F2 lockscreen

hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'


screen -t '[>_<]'
screen -t '[@_@]'
screen -t '[0_o]'
screen -t '[ack]'
screen -t '[term]'
